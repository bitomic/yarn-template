{
  "name": "yarn-template",
  "version": "1.0.0",
  "main": "dist/main.js",
  "author": "bitomic",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf tsconfig.tsbuildinfo dist && yarn tsc --listEmittedFiles --incremental",
    "build:watch": "yarn tsc -w --incremental",
    "lint": "eslint src/ --ext .ts --cache",
    "lint:fix": "eslint src/ --fix --ext .ts --cache",
    "start": "yarn node --enable-source-maps dist/main.js"
  },
  "packageManager": "yarn@3.8.7",
  "devDependencies": {
    "@bitomic/eslint-config": "^1.3.0",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.7.2"
  },
  "resolutions": {
    "listr2": "^6.6.1",
    "rimraf": "^5.0.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
