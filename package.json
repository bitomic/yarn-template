{
  "name": "yarn-template",
  "version": "1.0.0",
  "main": "dist/main.js",
  "author": "bitomic",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf tsconfig.tsbuildinfo dist && yarn tsc --listEmittedFiles --incremental",
    "build:watch": "yarn tsc -w --incremental",
    "lint": "eslint src/ --ext .ts --cache",
    "lint:fix": "eslint src/ --fix --ext .ts --cache",
    "start": "yarn node --enable-source-maps dist/main.js"
  },
  "packageManager": "yarn@3.6.0",
  "devDependencies": {
    "@bitomic/eslint-config": "^1.2.0",
    "@types/node": "^18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3"
  },
  "resolutions": {
    "listr2": "^6.6.0",
    "rimraf": "^5.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
